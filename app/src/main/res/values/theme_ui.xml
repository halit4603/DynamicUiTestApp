<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="AppBaseTheme" parent="android:Theme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
    </style>

    <style name="AppTheme.AppBarOverlay.Day" parent="AppTheme.AppBarOverlay">
        <item name="android:background">#FFF</item>
        <item name="android:panelBackground">#AAA</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="AppTheme.AppBarOverlay.Night" parent="AppTheme.AppBarOverlay">
        <item name="android:background">#000</item>
        <item name="android:panelBackground">#AAA</item>
        <item name="android:textColor">#FF0000</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme.Daylight.Stationary" parent="AppBaseTheme">
        <item name="android:background">#FFF</item>
        <item name="android:panelBackground">#AAA</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="AppTheme.Dusk.Stationary" parent="AppBaseTheme">
        <item name="android:background">#000</item>

        <item name="android:panelBackground">#AAA</item>
        <item name="android:textColor">#CC4444</item>
        <item name="android:textSize">14dp</item>
        <item name="android:buttonStyle">@style/ButtonLightButtons</item>
    </style>

    <style name="AppTheme.Night.Stationary" parent="AppBaseTheme">
        <item name="android:background">#000</item>
        <item name="android:panelBackground">#AAA</item>
        <item name="android:textColor">#FF0000</item>
        <item name="android:textSize">14dp</item>
        <item name="android:buttonStyle">@style/ButtonDarkButtons</item>

    </style>






    <style name="AppTheme.Daylight.Motion" parent="AppBaseTheme">
        <item name="android:background">#FFF</item>
        <item name="android:panelBackground">#AAA</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">32dp</item>
        <item name="android:buttonStyle">@style/ButtonLightButtons</item>
    </style>

    <style name="AppTheme.Dusk.Motion" parent="AppBaseTheme">
        <item name="android:background">#000</item>

        <item name="android:panelBackground">#AAA</item>
        <item name="android:textColor">#CC4444</item>
        <item name="android:textSize">32dp</item>
        <item name="android:buttonStyle">@style/ButtonLightButtons</item>
    </style>

    <style name="AppTheme.Night.Motion" parent="AppBaseTheme">
        <item name="android:background">#000</item>
        <item name="android:panelBackground">#AAA</item>
        <item name="android:textColor">#FF0000</item>
        <item name="android:textSize">32dp</item>
        <item name="android:buttonStyle">@style/ButtonDarkButtons</item>
    </style>




</resources>